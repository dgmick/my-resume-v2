                <div class="text-center">
                    <div class="w-2/4 m-auto">
                        <img src="{{ asset('build/images/profile-picture.jpeg') }}"
                             alt="{{ admin.fullName }}"
                             title="{{ admin.fullName }}"
                             class="rounded-full object-cover border-2 border-color-light-brown m-auto"
                        >
                    </div>
                    <div class="p-2">
                        <h3 class="mb-1 text-xl font-medium tracking-wider">{{ admin.fullName }}</h3>
                        <p>{{ admin.language }}</p>
                    </div>
                </div>
                <div class="m-auto flex justify-center items-center content-center hidden lg:block xs:h-0 sm:h-0" id="pdf">
                    <label for="file-fr"></label>
                    <select id="file-fr" class="p-1 bg-color-light-brown rounded-lg mx-2 appearance-none focus:outline-none">
