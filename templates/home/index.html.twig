{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center pb-5">{{ admin.job }}</h1>
    <section class="p-7 rounded-[25px] border border-color-light-brown shadow-lg relative overflow-hidden">
        <button id="show-infos" class="hidden xs:block sm:block absolute top-[-1px] right-[-1px] border rounded-bl-lg border-color-light-brown shadow-lg p-3 text-center bg-color-brown hover:bg-color-light-brown appearance-none focus:outline-none">
            Show info
        </button>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
            <div class="text-center">
                <div class="w-2/4 m-auto">
                    <img src="{{ asset('build/images/profile-picture.jpeg') }}"
                         alt="{{ admin.fullName }}"
                         title="{{ admin.fullName }}"
                         class="rounded-full object-cover border-2 border-color-light-brown m-auto"
                    >
                </div>
                <div class="p-2">
                    <h3 class="mb-1 text-xl font-medium tracking-wider">{{ admin.fullName }}</h3>
                    <p>{{ admin.language }}</p>
                </div>
            </div>
            <div class="m-auto flex justify-center items-center content-center xs:hidden sm:hidden xs:h-0 sm:h-0" id="pdf">
                <label for="file-fr"></label>
                <select id="file-fr" class="p-1 bg-color-light-brown rounded-lg mx-2 appearance-none focus:outline-none">
                    <option value="">Telecharger cv</option>
                    <option value="{{ asset('build/files/cv_francais_fr.pdf') }}">Version ðŸ‡«ðŸ‡·</option>
                    <option value="{{ asset('build/files/cv_canadien_fr.pdf') }}">Version ðŸ‡¨ðŸ‡¦</option>
                </select>
                <label for="file-en"></label>
                <select id="file-en" class="p-1 bg-color-light-brown rounded-lg mx-2 appearance-none focus:outline-none">
                    <option value="">Download Resume</option>
                    <option value="{{ asset('build/files/cv_canadien_fr.pdf') }}">Resume</option>
                </select>
            </div>
            <div class="m-auto xs:hidden sm:hidden xs:h-0 sm:h-0" id="value">
                <ul class="">
                    {{ include('include/_info-user.html.twig', {title: 'email', value: admin.email, fontName: 'fa-envelope'}) }}
                    {{ include('include/_info-user.html.twig', {title: 'phone', value: admin.phoneNumber, fontName: 'fa-phone'}) }}
                    {{ include('include/_info-user.html.twig', {title: 'localisation', value: admin.localisation, fontName: 'fa-location-dot'}) }}
                </ul>
            </div>
        </div>
        <hr class="border-color-brown w-2/4 m-auto my-5">
        <div class="text-center xs:grid xs:grid-cols-4 xs:gap-3">
            <input type="button" class="cursor-pointer md:mx-2 lg:mx-2" id="about" value="About">
            <input type="button" class="cursor-pointer md:mx-2 lg:mx-2" id="skill" value="Skill">
            <input type="button" class="cursor-pointer md:mx-2 lg:mx-2" id="resume" value="Resume">
            <input type="button" class="cursor-pointer md:mx-2 lg:mx-2" id="contact" value="Contact">
        </div>
    </section>
    <br>
    <article class="p-7 rounded-[25px] border border-color-light-brown shadow-lg">
        {{ include('home/about.html.twig') }}
        {{ include('home/skill.html.twig') }}
        {{ include('home/resume.html.twig') }}
        {{ include('home/contact.html.twig') }}
    </article>
{% endblock %}
