{% extends 'admin/layout.html.twig' %}

{% block title %}Experiences{% endblock %}

{% block body %}
    <h1>Experiences</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ experience.id }}</td>
        </tr>
        <tr>
            <th>JobRole</th>
            <td>{{ experience.jobRole }}</td>
        </tr>
        <tr>
            <th>Company</th>
            <td>{{ experience.company }}</td>
        </tr>
        <tr>
            <th>StartAt</th>
            <td>{{ experience.startAt }}</td>
        </tr>
        <tr>
            <th>PeriodEnd</th>
            <td>{{ experience.periodEnd }}</td>
        </tr>
        <tr>
            <th>Resume</th>
            <td>{{ experience.resume }}</td>
        </tr>
        <tr>
            <th>IsExperience</th>
            <td>{{ experience.isExperience ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>JobStatus</th>
            <td>{{ experience.jobStatus }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ experience.localisation }}</td>
        </tr>
        </tbody>
    </table>
    <div class="my-5">
        <a href="{{ path('app_experiences_index') }}" class="p-2 bg-color-brown">back to list</a>
        <a href="{{ path('app_experiences_edit', {'id': experience.id}) }}" class="p-2 bg-color-light-brown">edit</a>
        {{ include('experiences/_delete_form.html.twig') }}
    </div>
{% endblock %}
